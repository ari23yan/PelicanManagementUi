@model UsersManagementUi.ViewModels.Account.ForgetPasswordPhoneNumberViewModel


@{
    Layout = "_AuthLayout";
}


<div id="preloader">
    <div class="loader">
        <img src="~/images/loader.svg" />
    </div>
</div>
<div class="authincation h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100 align-items-center">
            <div class="col-md-6">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <div class="text-center mb-3">
                                    <a href="index.html">
                                        <img src="~/images/milad_hospital_logo.png" />
                                        <h2 class="text-center mb-4">داشبور مدیریت دسترسی کاربران</h2>
                                    </a>
                                </div>
                                <h4 class="text-center mb-4 mt-3">کد ارسالی به شماره تلفن  @Model.PhoneNumber</h4>
                                <form asp-action="ConfirmOtp" asp-controller="Account" enctype="multipart/form-data" method="post">
                                    <div class="mb-3">
                                        <label class="mb-1"><strong> شماره تلفن </strong></label>
                                        <input type="hidden" name="PhoneNumber" value="@Model.PhoneNumber">
                                        <input maxlength="6" name="Otp" type="number" placeholder="کد 6 رقمی ارسال شده به شماره همراه" id="inputMobile" class="form-control">
                                    </div>
                                    <div class="text-center"><button onclick="validate()" type="submit" class="btn btn-primary btn-block">ثبت</butto></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function validate() {
        const mobile = document.querySelector('input[name=Otp]');
        if (mobile.value === '' || mobile.value === undefined || mobile.value === null || mobile.value.length != 6) {
            {
                event.preventDefault(); // Prevent form submission
                return alert('لطفا کد ارسالی را به صورت صحیح وارد نمایید')
            }
        }
    }
</script>
