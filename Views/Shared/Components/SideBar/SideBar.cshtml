@model UsersManagementUi.ViewModels.User.UserViewModel
@using UsersManagementUi.ViewModels.Common;


<div class="deznav">
    <div class="deznav-scroll">
        <div class="dropdown header-profile">
            <a class="nav-link" href="javascript:void(0);" role="button" data-bs-toggle="dropdown">
                <img src="~/images/profile/pic1.jpg" width="20" alt=""><div class="header-info">
                    <span class="font-w400 mb-0">@Model.FullName</span><small class="text-end font-w400">@Model.RoleData.RoleName_Farsi</small>
                </div>
            </a><div class="dropdown-menu dropdown-menu-end">
                <a class="dropdown-item ai-icon" asp-action="Profile" asp-controller="Account">
                    <svg id="icon-user1" xmlns="http://www.w3.org/2000/svg" class="text-primary" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    <span class="ms-2">
                        پروفایل
                    </span>
                </a>
                <a class="dropdown-item ai-icon" asp-action="SignOut" asp-controller="Account">
                    <svg id="icon-logout" xmlns="http://www.w3.org/2000/svg" class="text-danger" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                    <span class="ms-2">
                        خروج
                    </span>
                </a>
            </div>
        </div>
        <ul class="metismenu" id="menu">
            @foreach (var item in Model.RoleData.Menus)
            {
                @if (item.HasMenu)
                {
                    var attributes = Newtonsoft.Json.JsonConvert.DeserializeObject<AttributesViewModel>(item.Link);
                    @if (item.SubMenus == null || !item.SubMenus.Any())
                    {
                        <li>
                            <a asp-action="@attributes.Action" asp-route-type="@attributes.Parameter" asp-controller="@attributes.Controller" class="ai-icon" aria-expanded="false">
                                <i class="@attributes.Icon"></i>
                                <span class="nav-text">@item.Name_Farsi</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="has-arrow ai-icon" href="javascript:void(0);" aria-expanded="false">
                                <i class="@attributes.Icon"></i>
                                <span class="nav-text">@item.Name_Farsi</span>
                            </a>
                            <ul aria-expanded="false">
                                @foreach (var subItem in item.SubMenus)
                                {
                                    var subItemAttributes = Newtonsoft.Json.JsonConvert.DeserializeObject<AttributesViewModel>(subItem.Link);
                                    @if (subItem.SubMenus == null || !subItem.SubMenus.Any())
                                    {
                                        <li>
                                            <a asp-action="@subItemAttributes.Action" asp-route-type="@subItemAttributes.Parameter" asp-controller="@subItemAttributes.Controller">@subItem.Name_Farsi</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="has-arrow ai-icon" href="javascript:void(0);" aria-expanded="false">@subItem.Name_Farsi</a>
                                            <ul aria-expanded="false">
                                                @foreach (var subSubItem in subItem.SubMenus)
                                                {
                                                    var subSubItemAttributes = Newtonsoft.Json.JsonConvert.DeserializeObject<AttributesViewModel>(subSubItem.Link);
                                                    <li>
                                                        <a asp-route-type="@subSubItemAttributes.Parameter" asp-action="@subSubItemAttributes.Action" asp-controller="@subSubItemAttributes.Controller">@subSubItem.Name_Farsi</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                    }
                }
            }
        </ul>

    </div>
</div>
